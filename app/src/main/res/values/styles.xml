<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FF888888</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.OfferList">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#4565C0</item>
        <item name="fab_colorPressed">#5272CD</item>
        <item name="fab_colorRipple">#92B2FF</item>
    </style>

    <style name="Base.TextAppearance.Fyber" parent="android:TextAppearance">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextAppearance.Fyber.comment.input" parent="Base.TextAppearance.Fyber">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_input_comment</item>
        <item name="android:textColorHint">@color/text_hint_input_comment</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">9</item>
    </style>

</resources>
